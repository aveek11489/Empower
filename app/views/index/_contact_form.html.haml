%form.contact-form
  .form-row
    .form-left
      %label First Name:
      %input.form-control{:type => "text", :size => "30"}
    .form-right
      %label Last Name:
      %input.form-control{:type => "text" , :size => "30"}

  .form-row
    .form-left
      %label Email:
      %input.form-control{:type => "text", :size => "30"}
    .form-right
      %label Company:
      %input.form-control{:type => "text", :size => "30"}

  .form-message
    %label Message
    %textarea.form-control{:rows => 5}
  %button.btn.btn-default{:type => "submit"} Send
