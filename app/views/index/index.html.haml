#cityCarousel.carousel.slide{:data => {"ride" => "carousel", "interval" => "2500"}}
  %ol.carousel-indicators
    %li.active{:data => {"target" => "#cityCarousel", "slide-to" => "0"}}
    %li{:data => {"target" => "#cityCarousel", "slide-to" => "1"}}
    %li{:data => {"target" => "#cityCarousel", "slide-to" => "2"}}

  .carousel-inner{:role => "listbox"}
    .item.active
      = image_tag "kolkata.png"
      .carousel-caption
        %h3 Kolkata
        %p Use to get Metro tickets, book pre-paid taxis in the airport and for parking in select malls
    .item
      = image_tag "mumbai.png"
      .carousel-caption
        %h3 Mumbai
        %p Use to get local train tickets, book pre-paid taxis in the airport and for parking in select malls
    .item
      = image_tag "bangalore.png"
      .carousel-caption
        %h3 Bangalore
        %p Use to get Metro tickets, book pre-paid taxis in the airport and for parking in select malls

  %a.left.carousel-control{:href => "#cityCarousel", :role => "button", :data => {"slide" => "prev"} }
    %span.glyphicon.glyphicon-chevron-left{:aria => {"hidden" => "true"}}
    %span.sr-only Previous
  %a.right.carousel-control{:href => "#cityCarousel", :role => "button", :data => {"slide" => "next"} }
    %span.glyphicon.glyphicon-chevron-right{:aria => {"hidden" => "true"}}
    %span.sr-only Next

